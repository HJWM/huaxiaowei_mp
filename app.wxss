/**app.wxss**/
@import "./public/css/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page{
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft{
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}
/* 名人堂 */
.famous_swiper{ width:750rpx;height:400rpx;}
.famous_swiper image{ width:750rpx;height:400rpx;}
.weui-navbar-image{
  width:70rpx;
  height:70rpx;
}
.weui-bar__item_on{font-weight:bold;color:#000!important}
.nav_self {
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.weui-tab__panel{padding-top:170rpx!important}
